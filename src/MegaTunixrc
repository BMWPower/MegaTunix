style "defaultfont"
{
  font_name = "fixed 11"
}

style 'main_buttons'
{
  bg[PRELIGHT] = { 1.0, 0.80, 0.80 }
}

	# Sets default font....
class "GtkWidget" style "defaultfont"
	# Sets the onmouseover backgrond for buttons to light red 
widget_class "*GtkButton*" style "main_buttons"

